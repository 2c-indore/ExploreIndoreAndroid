<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edittexttype"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/horixontal_line_color"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/normal_view_height"
        android:orientation="horizontal"
        android:padding="@dimen/normal_margin">

        <TextView
            android:id="@+id/detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_right_arrow_24dp"
            android:drawableLeft="@drawable/ic_right_arrow_24dp"
            android:drawablePadding="@dimen/small_margin"
            android:paddingStart="2dp"
            android:paddingLeft="2dp"
            android:textColor="@color/tertiaryText"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/detail_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textColor="@color/primaryText"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>